{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mission</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Service Date</th>
                <td>{% if mission.serviceDate %}{{ mission.serviceDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Product Name</th>
                <td>{{ mission.productName }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ mission.quantity }}</td>
            </tr>
            <tr>
                <th>Destination Country</th>
                <td>{{ mission.destinationCountry }}</td>
            </tr>
            <tr>
                <th>Vendor Name</th>
                <td>{{ mission.vendorName }}</td>
            </tr>
            <tr>
                <th>Vendor Email</th>
                <td>{{ mission.vendorEmail }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        <button class="btn btn-danger" type="submit" >Delete</button>
    {{ form_end(delete_form) }}

    <div class="row top-buffer">
        <a class="btn btn-success" href="{{ path('mission_edit', { 'id': mission.id }) }}">Edit</a>
        <a class="btn btn-warning" href="{{ path('mission_index') }}">Back to the list</a>
    </div>
{% endblock %}
